ARG PRESTASHOP_IMAGE_VERSION

FROM prestashop/prestashop:${PRESTASHOP_IMAGE_VERSION}

ARG DB_SERVER_ARG \
	DB_USER_ARG \
	DB_PASSWD_ARG \
	DB_NAME_ARG \
	PS_INSTALL_AUTO_ARG \
	PS_FOLDER_ADMIN_ARG \
	PS_FOLDER_INSTALL_ARG \
	PS_DOMAIN_ARG \
	ADMIN_MAIL_ARG \
	ADMIN_PASSWD_ARG

ENV DB_SERVER=${DB_SERVER_ARG} \
	DB_USER=${DB_USER_ARG} \
	DB_PASSWD=${DB_PASSWD_ARG} \
	DB_NAME=${DB_NAME_ARG} \
	PS_INSTALL_AUTO=${PS_INSTALL_AUTO_ARG} \
	PS_FOLDER_ADMIN=${PS_FOLDER_ADMIN_ARG} \
	PS_FOLDER_INSTALL=${PS_FOLDER_INSTALL_ARG} \
	PS_DOMAIN=${PS_DOMAIN_ARG} \
	ADMIN_MAIL=${ADMIN_MAIL_ARG} \
	ADMIN_PASSWD=${ADMIN_PASSWD_ARG}

COPY --chown=www-data:www-data ./bin/tawkto /var/www/html/modules/tawkto

WORKDIR /var/www/html
